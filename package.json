{
  "name": "aws-nodejs-typescript",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "dist/app.js",
  "scripts": {
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "start": "sls offline start -c",
    "build": "npm run tslint && npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "deploy": "sls deploy",
    "watch": "npm run build && npm run watch-ts && npm run test -- --watch && npm run start",
    "dev": "concurrently \"npm run build\" \"npm run watch-ts\" \"npm run test -- --watch\" \"npm run start\""
  },
  "dependencies": {
    "aws-lambda": "^0.1.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "js-sha256": "^0.9.0",
    "mongoose": "^5.1.3",
    "serverless-http": "^1.5.5",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^8.0.57",
    "@types/winston": "^2.3.9",
    "concurrently": "^3.5.1",
    "jest": "^23.1.0",
    "serverless-offline": "^3.24.5",
    "serverless-webpack": "^4.0.0",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^2.3.7",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.7.2",
    "winston": "^3.0.0-rc6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
